rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    match /sessions/{sessionId} {
      allow read: if signedIn() && request.auth.uid == resource.data.userId;
      allow write: if false;
    }

    // Allow users to read their generation logs and log entries within their sessions.
    match /sessions/{sessionId}/generationLogs/{runId} {
      allow read: if signedIn() &&
        request.auth.uid == get(/databases/$(database)/documents/sessions/$(sessionId)).data.userId;
      allow write: if false;

      match /entries/{entryId} {
        allow read: if signedIn() &&
          request.auth.uid == get(/databases/$(database)/documents/sessions/$(sessionId)).data.userId;
        allow write: if false;
      }
    }

    match /userProfiles/{userId} {
      allow read: if signedIn() && request.auth.uid == userId;
      allow write: if false;
    }

    match /app_config/security/{document=**} {
      allow read, write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
