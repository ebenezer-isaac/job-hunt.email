# ==============================================
# JOB HUNT ASSISTANT - ENVIRONMENT CONFIGURATION
# ==============================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env.local (for local development) or .env.build (for deployment).
# 2. Fill in the required values below.
# 3. Do not commit your real .env.local file to git!

# ----------------------------------------------
# 1. APP CONFIGURATION (Required)
# ----------------------------------------------

# The URL where your app is running.
# Local: http://localhost:3000
# Production: https://your-app-url.com
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Your email address. Used for "Contact Support" links.
CONTACT_EMAIL=your.email@gmail.com
NEXT_PUBLIC_CONTACT_EMAIL=your.email@gmail.com

# ADMIN EMAIL (Optional but Recommended)
# This email will bypass the allowlist and get 1000 quota automatically.
ADMIN_EMAIL=your.email@gmail.com

# Link to the GitHub repository (displayed in the footer).
NEXT_PUBLIC_REPO_URL=https://github.com/ebenezer-isaac/job-hunt.email

# ----------------------------------------------
# 2. SECURITY SECRETS (Required)
# ----------------------------------------------
# Generate these using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

# Shared secret between Middleware and API routes.
ACCESS_CONTROL_INTERNAL_TOKEN=

# Secret keys for signing auth cookies.
# You can provide multiple comma-separated keys for rotation.
FIREBASE_AUTH_COOKIE_SIGNATURE_KEYS=

# ----------------------------------------------
# 3. FIREBASE CONFIGURATION (Required)
# ----------------------------------------------
# Get these from the Firebase Console: https://console.firebase.google.com/
# Project Settings > Service Accounts (Server) & General > Your Apps (Client)

# Server-Side (Admin SDK)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# NOTE: If pasting into a .env file, ensure newlines are represented as \n
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Client-Side (Public Config)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=

# Auth Cookie Settings (Defaults are usually fine)
FIREBASE_AUTH_COOKIE_NAME=cv-customiser-auth
FIREBASE_AUTH_COOKIE_MAX_AGE_SECONDS=14400
FIREBASE_AUTH_COOKIE_SAME_SITE=lax
FIREBASE_AUTH_COOKIE_SECURE=false

# ----------------------------------------------
# 4. AI PROVIDERS (Required)
# ----------------------------------------------

# Google Gemini API Key
# Get it here: https://aistudio.google.com/
GEMINI_API_KEY=

# Apollo.io API Key (Optional)
# Required only for finding contact emails.
# Get it here: https://www.apollo.io/
APOLLO_API_KEY=

# ----------------------------------------------
# 5. ADVANCED TUNING (Optional - Defaults Provided)
# ----------------------------------------------

# AI Models
GEMINI_PRO_MODEL=gemini-2.5-pro
GEMINI_FLASH_MODEL=gemini-2.5-flash
GEMINI_EMBED_MODEL=text-embedding-004

# Generation Constraints
TARGET_PAGE_COUNT=2
MAX_CONTENT_LENGTH=50000
AI_MAX_RETRIES=5
AI_INITIAL_RETRY_DELAY=10000

# System Settings
NODE_ENV=development
LOG_LEVEL=info
NEXT_PUBLIC_LOG_LEVEL=info
PDFLATEX_COMMAND=pdflatex
SCRAPING_TIMEOUT=30000

# LlamaIndex Cache
LLAMAINDEX_ENABLE_PERSISTENCE=true
LLAMAINDEX_PERSIST_DIR=.llamaindex-cache
